#!/bin/zsh
#
# Profile used by zsh
#
# vim: set ft=zsh

export EDITOR="vim"

# Colors
if [ -x /usr/bin/dircolors ]; then
    if [ -r ~/.dircolors ] ; then
        eval $(dircolors -b ~/.dircolors)
    elif [ -r /etc/dir_colors ] ; then
        eval $(dircolors -b /etc/dir_colors)
    else
        eval $(dircolors)
    fi
fi

